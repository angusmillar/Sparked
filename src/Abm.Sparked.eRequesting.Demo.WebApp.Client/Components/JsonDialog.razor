<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5">@ResourceType/@ResourceId</MudText>
        <MudSpacer />
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Close">Close</MudButton>
    </TitleContent>
    <DialogContent>
        <JsonRender JsonValue="@ContentText"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    
    [CascadingParameter] public required MudDialogInstance MudDialog { get; set; }
 
    [Parameter] public required string ContentText { get; set; }
    
    [Parameter] public required string ResourceType { get; set; }
    
    [Parameter] public required string ResourceId { get; set; }
    
    void Close() => MudDialog.Cancel();
    
    
   
}